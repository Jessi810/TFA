@model TFA.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send";
}

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl, Email = Model.Email }, FormMethod.Post, new { @class = "form-horizontal small-panel col-sm-offset-3 col-md-offset-4 col-sm-6 col-md-4", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>Send verification code</h4>
    <hr />
    <div class="row">
        <label class="col-xs-12">Select Authentication Provider:</label>
        <div class="col-xs-12">
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new { @class = "btn btn-default" })
            
        </div>
    </div>
    <br />
    <span class="glyphicon glyphicon-info-sign"></span><text>&nbsp;&nbsp;We will send the login code to either your email or phone.</text>

    <div class="form-group margin-top-24">
        <div class="col-xs-12">
            <input type="submit" value="Send code" class="btn btn-success" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
