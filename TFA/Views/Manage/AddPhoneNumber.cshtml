@model TFA.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Phone Number";
}

@using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal small-panel col-sm-offset-3 col-md-offset-4 col-sm-6 col-md-4", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add/change a phone number</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Number, new { @class = "col-md-12" })
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group margin-top-24">
        <div class="col-md-12">
            <input type="submit" class="btn btn-success" value="Send verification code" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
