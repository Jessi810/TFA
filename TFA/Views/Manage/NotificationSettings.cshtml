@model TFA.Models.NotificationSettings

@{
    ViewBag.Title = "Notification Settings";
}

<h2>Notification Settings</h2>
<h4>Change your notification settings here</h4>
<hr />

@using (Html.BeginForm("NotificationSettings", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <table class="table table-bordered table-striped">
        <tr>
            <th>Notification for</th>
            <th>Email</th>
            <th>SMS</th>
        </tr>
        <tr>
            <td>Password has been changed</td>
            <td>@Html.CheckBoxFor(m => Model.ChangePasswordEmail, new { @check = Model.ChangePasswordEmail })</td>
            <td>@Html.CheckBoxFor(m => Model.ChangePasswordSMS, new { @check = Model.ChangePasswordSMS })</td>
        </tr>
        <tr>
            <td>Phone number has been changed</td>
            <td>@Html.CheckBoxFor(m => Model.ChangePhoneNumberEmail, new { @check = Model.ChangePhoneNumberEmail })</td>
            <td>@Html.CheckBoxFor(m => Model.ChangePhoneNumberSMS, new { @check = Model.ChangePhoneNumberSMS })</td>
        </tr>
        <tr>
            <td>Account has been lockout</td>
            <td>@Html.CheckBoxFor(m => Model.AccountLockoutEmail, new { @check = Model.AccountLockoutEmail })</td>
            <td>@Html.CheckBoxFor(m => Model.AccountLockoutSMS, new { @check = Model.AccountLockoutSMS })</td>
        </tr>
    </table>
    <div class="form-group margin-top-24">
        <div class="col-xs-12">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
}
